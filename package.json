{
  "name": "npm-package-deployer",
  "version": "0.1.0",
  "description": "A useful tool to deploy an NPM version via CLI",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "pre-deploy": "npm run build && npm run clean",
    "deploy": "npm-deploy npm-package-deployer",
    "clean": "rmdir lib /s/q",
    "action-build": "ncc build action.index.js && git add ./dist/index.js && git add ./action.index.js && git add ./action.yml &&git commit -m \"Updating GitHub Action\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danitseitlin/npm-package-deployer.git"
  },
  "author": "Dani Tseitlin",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/danitseitlin/npm-package-deployer/issues"
  },
  "homepage": "https://github.com/danitseitlin/npm-package-deployer#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "node": "^15.3.0",
    "@actions/core": "^1.0.0",
    "@actions/exec": "^1.0.0"
  },
  "bin": {
    "npm-deploy": "./bin/node ../../../lib/index.js"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^14.14.10",
    "@zeit/ncc": "^0.22.3",
    "typescript": "^4.1.2"
  }
}
